@*Houda*@

@model List<EcoMobil.Models.Personne.Utilisateur>

@{
    Layout = "_layout";
}
<link rel="stylesheet" type="text/css" href="~/css/profil.css">




 @foreach (var utilisateur in Model)
        {
			<br><br>
