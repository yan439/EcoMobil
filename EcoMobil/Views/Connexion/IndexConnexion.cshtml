@*Houda*@

@model EcoMobil.ViewModels.HomeViewModel
@{
    Layout = "_Layout";
}
@if (Model.Authentification)
{
    <div class="container center_block">
        <h3>Vous êtes déja connecté !</h3>
        <p>Bienvenue @User.Identity.Name</p>
        @Html.ActionLink("Se déconnecter", "Deconnexion")
    </div>
    
}
else
{
<section class="page-section portfolio mt-5">

        <div class="container">
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Authentification</h2>
            
            </div>
            <div class="row justify-content-center">
             <div class="col-lg-8 col-xl-7">
    
   @using (Html.BeginForm())
    {
        <div class="form-floating mb-3">
                       
            


                       @Html.TextBoxFor(m => m.Utilisateur.Email, new { @class = "form-control", placeholder = "Email" })  
                       @Html.LabelFor(m => m.Utilisateur.Email)
                       @Html.ValidationMessageFor(m => m.Utilisateur.Email)
                   </div>

                    <div class="form-floating mb-3">
                     @Html.PasswordFor(m => m.Utilisateur.MotDePasse, new { @class = "form-control", placeholder = "Mot de passe" })  
                     @Html.LabelFor(m => m.Utilisateur.MotDePasse)
                     @Html.ValidationMessageFor(m => m.Utilisateur.MotDePasse)
                   </div>
                   


                    <div class="button_orange">
                        <button class="btn btn-primary btn-xl" type="submit" >Se Connecter</button>
